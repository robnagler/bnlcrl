{
    "defaults": {
        "atten": {
            "fields": {
                "density": "Density",
                "fixed": "Fixed",
                "formula": "Formula",
                "material": "Material",
                "max": "Max",
                "min": "Min",
                "npts": "Npts",
                "output": "Output",
                "plot": "Plot",
                "scan": "Scan",
                "temp": "temp"
            },
            "file_tag": "HREF",
            "post_url": "/cgi-bin/atten.pl"
        },
        "delta": {
            "fields": {
                "density": "Density",
                "formula": "Formula",
                "material": "Material",
                "max": "Max",
                "min": "Min",
                "npts": "Npts",
                "output": "Output",
                "scan": "Scan"
            },
            "file_tag": "URL",
            "post_url": "/cgi-bin/getdb.pl"
        },
        "server": "http://henke.lbl.gov"
    },
    "description": "Get Index of Refraction from http://henke.lbl.gov/optical_constants/getdb2.html",
    "parameters": {
        "calc_delta": {
            "default": false,
            "help": "a flag to calculate delta analytically",
            "type": "bool"
        },
        "characteristic": {
            "default": "delta",
            "help": "characteristic to be extracted ('delta' or 'atten' for attenuation length)",
            "type": "str"
        },
        "data_file": {
            "default": "",
            "help": "a *.dat data file in bnlcrl/package_data/dat/ directory with delta values for the material of the CRL (e.g., Be)",
            "type": "str"
        },
        "e_max": {
            "default": 30000,
            "help": "the highest available energy [eV]",
            "type": "float"
        },
        "e_min": {
            "default": 30,
            "help": "the lowest available energy [eV]",
            "type": "float"
        },
        "e_step": {
            "default": 10,
            "help": "energy step size used for saving data to a file [eV]",
            "type": "float"
        },
        "energy": {
            "default": null,
            "help": "photon energy [eV]",
            "type": "float"
        },
        "formula": {
            "default": "Be",
            "help": "material's formula of the interest",
            "type": "str"
        },
        "n_points": {
            "default": 500,
            "help": "number of points to get from the server",
            "type": "int"
        },
        "outfile": {
            "default": "",
            "help": "optional output file",
            "type": "str"
        },
        "precise": {
            "default": false,
            "help": "a flag to find delta within the energy interval +/- 1 eV from the specified energy",
            "type": "bool"
        },
        "use_numpy": {
            "default": false,
            "help": "use NumPy",
            "type": "bool"
        },
        "verbose": {
            "default": false,
            "help": "print output to console",
            "type": "bool"
        }
    }
}
